{
  "name": "webwatcher",
  "version": "2.0.0",
  "description": "Cybersecurity Agent for Everyone - Real-time threat analysis, breach detection, and security scanning with AI",
  "private": true,
  "author": "WebWatcher Team",
  "license": "Apache-2.0",
  "scripts": {
    "start": "NODE_OPTIONS='--no-warnings' node dist/server.js",
    "start:prod": "NODE_OPTIONS='--no-warnings' tsx ./src/server.ts",
    "dev:server": "nodemon --exec tsx ./src/server.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' tsc",
    "build:fast": "echo 'Using tsx runtime - no build needed'",
    "vercel-build": "npm run build",
    "lint": "eslint -c .eslintrc.json src/**/*.ts",
    "lint:fix": "eslint -c .eslintrc.json src/**/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,js,cjs,json,md}\"",
    "format:check": "prettier -c .prettierrc --check \"**/*.{ts,js,cjs,json,md}\""
  },
  "dependencies": {
    "@langchain/core": "^0.3.19",
    "@langchain/langgraph": "^0.2.21",
    "@langchain/openai": "^0.3.14",
    "@letta-ai/letta-client": "^1.3.2",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}
