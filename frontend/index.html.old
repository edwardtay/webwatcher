        .action-btn::before { content: ''; position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.1), transparent); transition: left 0.5s ease; }
        .action-btn:hover::before { left: 100%; }
        .action-btn:hover { transform: translateY(-2px); border-color: rgba(0, 255, 255, 0.5); box-shadow: 0 6px 20px rgba(0, 255, 255, 0.2); }
