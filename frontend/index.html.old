        .chat-container { flex: 1; display: flex; flex-direction: column; background: rgba(15, 20, 35, 0.6); border: 1px solid rgba(0, 255, 255, 0.1); border-radius: 8px; overflow: hidden; }
        .chat-messages { height: 300px; overflow-y: auto; padding: 8px; scroll-behavior: smooth; }
