</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">
                <span class="logo-icon">üõ°Ô∏è</span>
                <span class="logo-text">WebWatcher</span>
            </div>
            <div class="tagline">Cybersecurity Agent for Everyone</div>
        </div>
        
        <div class="main-panel">
            <div class="actions-grid">
                <div class="action-btn" onclick="quickAction('scan_url')">
                    <span class="action-icon">üîç</span>
                    <div class="action-title">Scan URL</div>
                    <div class="action-desc">Detect phishing & malware</div>
                </div>
                <div class="action-btn" onclick="quickAction('check_domain')">
                    <span class="action-icon">üåê</span>
                    <div class="action-title">Check Domain</div>
                    <div class="action-desc">Reputation analysis</div>
                </div>
                <div class="action-btn" onclick="quickAction('analyze_email')">
                    <span class="action-icon">üìß</span>
                    <div class="action-title">Email Analysis</div>
                    <div class="action-desc">Threat detection</div>
                </div>
                <div class="action-btn" onclick="quickAction('breach_check')">
                    <span class="action-icon">üîê</span>
                    <div class="action-title">Breach Check</div>
                    <div class="action-desc">Data breach search</div>
                </div>
            </div>
            
            <div class="chat-container">
                <div class="chat-messages" id="chatMessages">
                    <div class="message message-agent">
                        <div class="message-label">System</div>
                        <div class="message-content">üõ°Ô∏è <strong>WebWatcher initialized.</strong> Ready to analyze security threats.</div>
                    </div>
                </div>
                
                <div class="chat-input-container">
                    <div class="input-wrapper">
                        <input type="text" id="chatInput" class="chat-input" placeholder="Enter URL, domain, email, or security query..." onkeypress="handleKeyPress(event)"/>
                        <button class="send-btn" onclick="sendMessage()">Analyze</button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="status-bar">
            <div class="status-item"><span class="status-dot"></span><span>MCP Enabled</span></div>
            <div class="status-item"><span class="status-dot"></span><span>A2A Protocol</span></div>
            <div class="status-item"><span class="status-dot"></span><span>15 Security APIs</span></div>
        </div>
    </div>
    
    <script>
        // Cache buster: v1764756696
        const API_BASE = window.location.origin;
        
        function quickAction(action) {
            const examples = {
                'scan_url': 'Scan https://suspicious-site.com for threats',
                'check_domain': 'Check domain reputation for example.com',
                'analyze_email': 'Analyze email from sender@suspicious-domain.com',
                'breach_check': 'Check if user@example.com has been breached'
            };
            document.getElementById('chatInput').value = examples[action];
            document.getElementById('chatInput').focus();
        }
        
        function handleKeyPress(event) {
            if (event.key === 'Enter') sendMessage();
        }
        
        async function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;
            
            addMessage(message, 'user', false);
            input.value = '';
            
            const loadingId = addMessage('Analyzing<span class="loading"></span>', 'agent', false);
            
            try {
                const response = await fetch(`${API_BASE}/api/chat`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message })
                });
                
                const data = await response.json();
                document.getElementById(loadingId).remove();
                
                if (data.response) {
                    addMessage(data.response, 'agent', true);
                } else if (data.error) {
                    addMessage(`‚ö†Ô∏è Error: ${data.error}`, 'agent', false);
                }
            } catch (error) {
                document.getElementById(loadingId).remove();
                addMessage(`‚ùå Connection error: ${error.message}`, 'agent', false);
            }
        }
        
        function addMessage(content, type, isMarkdown) {
            const messagesDiv = document.getElementById('chatMessages');
            const messageId = 'msg-' + Date.now();
            const messageDiv = document.createElement('div');
            messageDiv.id = messageId;
            messageDiv.className = `message message-${type}`;
            const label = type === 'user' ? 'You' : 'WebWatcher';
            
            let processedContent = content;
            if (isMarkdown && typeof marked !== 'undefined') {
                processedContent = marked.parse(content);
            }
            
            messageDiv.innerHTML = `<div class="message-label">${label}</div><div class="message-content">${processedContent}</div>`;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
            
            return messageId;
        }
        
        window.addEventListener('load', () => {
            document.getElementById('chatInput').focus();
        });
    </script>
</body>
