        .message-content code { background: rgba(0, 0, 0, 0.3); padding: 1px 4px; border-radius: 3px; font-family: 'Courier New', monospace; font-size: 16.5px; color: #00ff88; }
        .message-content pre { background: rgba(0, 0, 0, 0.4); padding: 6px; border-radius: 4px; overflow-x: auto; margin: 4px 0; }
        .message-content pre code { background: none; padding: 0; }
        .message-content a { color: #00ffff; text-decoration: none; }
        .message-content a:hover { text-decoration: underline; }
        .message-content strong { color: #00ff88; font-weight: 600; }
        .message-content blockquote { border-left: 2px solid rgba(0, 255, 255, 0.5); padding-left: 8px; margin: 4px 0; color: #9ca3af; }
        .chat-input-container { position: sticky; bottom: 0; flex-shrink: 0; padding: 8px; background: rgba(10, 15, 30, 0.8); border-top: 1px solid rgba(0, 255, 255, 0.15); }
        .input-wrapper { display: flex; gap: 6px; }
        .chat-input { flex: 1; background: rgba(30, 35, 55, 0.6); border: 1px solid rgba(0, 255, 255, 0.3); border-radius: 6px; padding: 8px 10px; color: #e5e7eb; font-size: 18px; font-family: inherit; transition: all 0.3s ease; }
        .chat-input:focus { outline: none; border-color: rgba(0, 255, 255, 0.6); box-shadow: 0 0 0 3px rgba(0, 255, 255, 0.1); }
        .chat-input::placeholder { color: #6b7280; }
        .send-btn { background: linear-gradient(135deg, #00ffff 0%, #00ff88 100%); border: none; border-radius: 6px; padding: 8px 16px; color: #0a0e27; font-weight: 600; font-size: 18px; cursor: pointer; transition: all 0.3s ease; text-transform: uppercase; letter-spacing: 0.8px; }
        .send-btn:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(0, 255, 255, 0.4); }
        .send-btn:active { transform: translateY(0); }
        .loading { display: inline-block; }
        .loading::after { content: '...'; animation: dots 1.5s infinite; }
        @keyframes dots { 0%, 20% { content: '.'; } 40% { content: '..'; } 60%, 100% { content: '...'; } }
        .status-bar { position: fixed; bottom: 0; left: 0; right: 0; z-index: 100; flex-shrink: 0; display: flex; justify-content: center; gap: 15px; padding: 6px; background: rgba(20, 25, 45, 0.6); border-radius: 6px; margin-top: 6px; }
        .status-item { display: flex; align-items: center; gap: 5px; font-size: 15px; color: #8b95a5; }
        .status-dot { width: 5px; height: 5px; border-radius: 50%; background: #00ff88; box-shadow: 0 0 8px rgba(0, 255, 136, 0.6); animation: blink 2s ease-in-out infinite; }
        @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.3; } }
        @media (max-width: 768px) { .actions-grid { grid-template-columns: 1fr; } .logo-text { font-size: 48px; } .logo-icon { font-size: 48px; } .main-panel { padding: 8px; } .chat-messages { flex: 1; min-height: 200px; } .container { padding: 4px 8px; } }
