{
  "name": "verisense-agentkit",
  "version": "1.0.0",
  "description": "Cybersecurity agent for blockchain threat detection and monitoring using Coinbase AgentKit",
  "private": true,
  "author": "NetWatch Team",
  "license": "Apache-2.0",
  "scripts": {
    "start": "NODE_OPTIONS='--no-warnings' tsx ./src/index.ts",
    "server": "NODE_OPTIONS='--no-warnings --experimental-specifier-resolution=node' tsx ./src/server.ts",
    "dev": "nodemon --exec tsx ./src/index.ts",
    "dev:server": "nodemon --exec tsx ./src/server.ts",
    "build": "tsc",
    "lint": "eslint -c .eslintrc.json src/**/*.ts",
    "lint:fix": "eslint -c .eslintrc.json src/**/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,js,cjs,json,md}\"",
    "format:check": "prettier -c .prettierrc --check \"**/*.{ts,js,cjs,json,md}\""
  },
  "dependencies": {
    "@coinbase/agentkit": "latest",
    "@coinbase/agentkit-langchain": "latest",
    "@langchain/core": "^0.3.19",
    "@langchain/langgraph": "^0.2.21",
    "@langchain/openai": "^0.3.14",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "viem": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.0.0"
  }
}
